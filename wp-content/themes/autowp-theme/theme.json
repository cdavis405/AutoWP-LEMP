{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "palette": [
        {
          "slug": "primary-blue",
          "color": "#4FB3BF",
          "name": "Primary Teal"
        },
        {
          "slug": "light-blue",
          "color": "#E6F2FF",
          "name": "Light Blue"
        },
        {
          "slug": "dark-green",
          "color": "#2E7D32",
          "name": "Dark Green"
        },
        {
          "slug": "light-green",
          "color": "#E8F5E9",
          "name": "Light Green"
        },
        {
          "slug": "dark-gray",
          "color": "#2B2B2B",
          "name": "Dark Gray"
        },
        {
          "slug": "off-white",
          "color": "#FAFAFA",
          "name": "Off White"
        },
        {
          "slug": "white",
          "color": "#FFFFFF",
          "name": "White"
        },
        {
          "slug": "alert-red",
          "color": "#D32F2F",
          "name": "Alert Red"
        },
        {
          "slug": "warning-amber",
          "color": "#F57C00",
          "name": "Warning Amber"
        }
      ],
      "gradients": [
        {
          "slug": "blue-to-teal",
          "gradient": "linear-gradient(135deg, #E6F2FF 0%, #4FB3BF 100%)",
          "name": "Blue to Teal"
        },
        {
          "slug": "green-fade",
          "gradient": "linear-gradient(135deg, #E8F5E9 0%, #2E7D32 100%)",
          "name": "Green Fade"
        }
      ],
      "duotone": [],
      "defaultGradients": false,
      "defaultPalette": false
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "slug": "system",
          "name": "System"
        },
        {
          "fontFamily": "Georgia, 'Times New Roman', Times, serif",
          "slug": "serif",
          "name": "Serif"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.25rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "1.5rem",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "2rem",
          "name": "2X Large"
        },
        {
          "slug": "xxx-large",
          "size": "2.5rem",
          "name": "3X Large"
        }
      ],
      "dropCap": false
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "slug": "30",
          "size": "0.5rem",
          "name": "1"
        },
        {
          "slug": "40",
          "size": "1rem",
          "name": "2"
        },
        {
          "slug": "50",
          "size": "1.5rem",
          "name": "3"
        },
        {
          "slug": "60",
          "size": "2rem",
          "name": "4"
        },
        {
          "slug": "70",
          "size": "3rem",
          "name": "5"
        },
        {
          "slug": "80",
          "size": "4rem",
          "name": "6"
        }
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "custom": {
      "lineHeight": {
        "body": 1.6,
        "heading": 1.2
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--off-white)",
      "text": "var(--wp--preset--color--dark-gray)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "1.5rem",
      "padding": {
        "top": "0",
        "right": "1.5rem",
        "bottom": "0",
        "left": "1.5rem"
      }
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary-blue)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--dark-green)"
          }
        },
        ":focus": {
          "outline": {
            "width": "2px",
            "style": "solid",
            "color": "var(--wp--preset--color--primary-blue)",
            "offset": "2px"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary-blue)",
          "text": "var(--wp--preset--color--white)"
        },
        "border": {
          "radius": "4px"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--dark-green)"
          }
        },
        ":focus": {
          "outline": {
            "width": "2px",
            "style": "solid",
            "color": "var(--wp--preset--color--primary-blue)",
            "offset": "2px"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "lineHeight": "1.2",
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "top": "0",
            "bottom": "1rem"
          }
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "lineHeight": "1.2",
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "top": "2rem",
            "bottom": "1rem"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.3",
          "fontWeight": "600"
        },
        "spacing": {
          "margin": {
            "top": "1.5rem",
            "bottom": "0.75rem"
          }
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "1.4",
          "fontWeight": "600"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "lineHeight": "1.4",
          "fontWeight": "600"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "lineHeight": "1.4",
          "fontWeight": "600",
          "textTransform": "uppercase"
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "spacing": {
          "blockGap": "1.5rem"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "500"
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "lineHeight": "1.2",
          "fontWeight": "700"
        }
      },
      "core/post-excerpt": {
        "color": {
          "text": "var(--wp--preset--color--dark-gray)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "core/quote": {
        "border": {
          "color": "var(--wp--preset--color--primary-blue)",
          "style": "solid",
          "width": "0 0 0 4px"
        },
        "spacing": {
          "padding": {
            "left": "1.5rem"
          }
        },
        "color": {
          "text": "var(--wp--preset--color--dark-gray)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "blank",
      "title": "Blank",
      "postTypes": ["page", "post"]
    },
    {
      "name": "page-wide",
      "title": "Wide Page",
      "postTypes": ["page"]
    }
  ]
}
