# Environment Configuration for RetaGuide
# Copy this file to .env and update with your values

# Domain configuration
DOMAIN=retaguide.com

# Database configuration
DB_NAME=retaguide_wp
DB_USER=retaguide_user
DB_PASSWORD=your_secure_password_here

# WordPress admin configuration
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=your_secure_admin_password_here
WP_ADMIN_EMAIL=admin@retaguide.com

# Azure VM configuration (for deployment scripts)
AZURE_VM_IP=your.vm.ip.address
AZURE_VM_USER=azureuser
SSH_KEY_PATH=~/.ssh/azure_key

# Optional: Email configuration for WordPress
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@retaguide.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@retaguide.com

# Optional: Backup configuration
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups/retaguide
