# .gitignore for RetaGuide WordPress Site

# WordPress core files
/wp-admin/
/wp-includes/
/wp-*.php
/xmlrpc.php
/index.php
/license.txt
/readme.html

# WordPress config
wp-config.php
wp-config-local.php

# Uploads directory
/wp-content/uploads/

# Cache
/wp-content/cache/
/wp-content/advanced-cache.php
/wp-content/wp-cache-config.php

# Backup files
*.sql
*.sql.gz
*.tar.gz
/wp-content/backups/

# Log files
*.log
error_log
debug.log

# Operating System Files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
*~

# Editor files
*.sublime-project
*.sublime-workspace
*.swp
*.swo
*~
.vscode/
.idea/

# Node
node_modules/
npm-debug.log
yarn-error.log
package-lock.json
yarn.lock

# Build files
/dist/
/build/

# Dependencies
/vendor/
composer.lock

# Environment files
.env
.env.local
.env.*.local

# Credentials
*credentials*.txt
*password*.txt

# Temporary files
*.tmp
*.bak
*.old

# Plugin and theme development
/wp-content/plugins/*/
!/wp-content/plugins/.gitkeep
/wp-content/themes/*/
!/wp-content/themes/retaguide/

# MU Plugins - keep custom, ignore others
/wp-content/mu-plugins/*/
!/wp-content/mu-plugins/retaguide-security.php
!/wp-content/mu-plugins/.gitkeep

# Keep directory structure
!.gitkeep
